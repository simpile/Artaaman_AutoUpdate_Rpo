<style>
    main {
        background-color: var(--green-dark);
        height: 100vh;
        padding: 1rem;
    }

    section {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 20%;
        height: 100%;
    }

    #svg {
        max-height: 30vh;
    }

    .message-box {

        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: var(--white-color);
        text-align: center;
        font-family: "Shabnam-Normal";
        gap: 8%;
    }

    .message-box h1 {
        font-size: 10rem;
        line-height: 65%;
        max-height: 40%;
        color: wheat;

    }

    .message-box p {
        font-size: 2rem;
        color: wheat;
    }

    .buttons-con {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: space-evenly;
        flex-wrap: wrap
    }

    .buttons-con a {
        background: var(--yellow-light);
        padding: .5rem 1rem;
        border-radius: 20px;
        color: black;
        font-weight: bold;
        font-size: 1rem;
        transition: all 0.3s linear;
        cursor: pointer;
        text-decoration: none;
        margin: .5rem;
        display: flex;
        align-items: center;
        justify-content: space-around;

    }

    .buttons-con a:hover {
        background: var(--yellow-dark);
    }

    #svg {
        animation: float 1s infinite ease-in-out alternate;
    }


    @keyframes float {
        100% {
            transform: translateY(20px);
        }
    }

    @media (max-width: 827px) {
        section {
            gap: 0;
        }

    }


    @media (max-width: 814px) {

        .message-box {
            height: 50%;
            justify-content: space-between;
        }

        section {
            gap: 5%;
        }
    }

    @media (max-width: 701px) {

        #svg {
            max-height: 15vh;
        }

        .message-box h1 {
            font-size: 5rem;

        }

        .message-box p {
            font-size: 1.5rem;

        }

        .message-box a {
            font-size: .8rem;

        }


    }

    @media (max-width: 572px) {

        .message-box {
            height: 60%;
        }
    }
</style>

