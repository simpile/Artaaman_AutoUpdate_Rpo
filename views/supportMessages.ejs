<!-- views/supportMessages.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Support Messages</title>
</head>
<body>
      <style>
        /* افزودن استایل‌های خودتان اینجا */
        .message-container {
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
        }

        .checkbox-container {
            text-align: right;
        }
    </style>
  <h1>پیام‌های ساپورت</h1>
  <ul>
    <% supportMessages.forEach(message => { %>
      <li>
        <p><strong>نام:</strong> <%= message.name %></p>
        <p><strong>ایمیل:</strong> <%= message.email %></p>
        <p><strong>تلفن:</strong> <%= message.phone %></p>
        <p><strong>روش ارتباط:</strong> <%= message.method %></p>
        <p><strong>پیام:</strong> <%= message.message %></p>
        <hr>
      </li>
    <% }) %>
  </ul>
</body>
</html>
